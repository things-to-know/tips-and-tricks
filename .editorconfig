root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 100
tab_width = 4
trim_trailing_whitespace = true

[*.html]
indent_size = 2
max_line_length = 120

[*.json]
indent_size = 2

[{*.markdown,*.md}]
indent_size = 2

[*.py]
indent_size = 4

[*.sh]
indent_style = tab
tab_width = 4

[*.ts]
indent_size = 2

[*.xml]
indent_size = 2
max_line_length = 120

[{*.yaml,*.yml}]
indent_size = 2

[Makefile]
indent_style = tab
