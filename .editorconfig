root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 100
tab_width = 4
trim_trailing_whitespace = true

# Whether the editor automatically starts a new line when typing reaches the hard wrap limit.
ij_wrap_on_typing = false

[*.html]
indent_size = 2
max_line_length = 120

[*.json]
indent_size = 2

[{*.markdown,*.md}]
indent_size = 2

# Whether to ensure that tables are automatically formatted.
ij_markdown_format_tables = true

# Whether empty lines should retain the same indentation as the surrounding lines of code.
ij_markdown_keep_indents_on_empty_lines = false

# Line breaks within text blocks are preserved.
ij_markdown_keep_line_breaks_inside_text_blocks = true

# Number of min/man lines around block elements, headers and paragraphs.
ij_markdown_max_lines_around_block_elements = 1
ij_markdown_max_lines_around_header = 1
ij_markdown_max_lines_between_paragraphs = 1
ij_markdown_min_lines_around_block_elements = 1
ij_markdown_min_lines_around_header = 1
ij_markdown_min_lines_between_paragraphs = 1

# Whether the editor automatically starts a new line when typing reaches the hard wrap limit.
ij_wrap_on_typing = true

[*.py]
indent_size = 4

[*.sh]
indent_style = tab
tab_width = 4

[*.ts]
indent_size = 2

[*.xml]
indent_size = 2
max_line_length = 120

[{*.yaml,*.yml}]
indent_size = 2

# Whether to make sure there is the same indent on blank lines as on surrounding lines of code.
ij_yaml_keep_indents_on_empty_lines = false

# Whether to keep line breaks that already exist in code regardless of whether they were added
# by a formatter or an end user.
ij_yaml_keep_line_breaks = true

[.editorconfig]
# Whether group field declarations must be aligned.
ij_editorconfig_align_group_field_declarations = false
# Whether to ensure that spaces are added around assignment operators (=).
ij_editorconfig_spaces_around_assignment_operators = true

[Makefile]
indent_style = tab
